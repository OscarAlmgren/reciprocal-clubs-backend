[Unit]
Description=Jaeger Tracing for Reciprocal Clubs
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Container]
Image=docker.io/jaegertracing/all-in-one:1.50
ContainerName=reciprocal-jaeger
PublishPort=16686:16686
PublishPort=14268:14268
Environment=COLLECTOR_OTLP_ENABLED=true
Network=reciprocal-clubs.network

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target